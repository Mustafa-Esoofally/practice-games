//generates random num
int random  (int lower, int upper,  int count)
{
    int i , num ;

    for (i = 0; i < count; i++) {

        num = ( rand() % (upper - lower + 1) ) + lower ;
    }
return num ;

}
int main()
{

  int team=2 , a=0 , b=0 ; // global
  int action , action1,score1=0,gk  , shoot ;//team 1 variables
  int reaction , reaction1 , gk1 , shoot1 , score2=0  ; //team 2 variables
  int player1=9 , player2 ,player3 ; //player1 - passer ,player2-receiver , player3 challenge
  time_t start_t, end_t;
  double diff_t;

  printf("\n\n\n\t\t\t\t\t                                 ~~|WELCOME TO FIFA 20|~~                                      \n\n ");

  pitch(44,150,a,b,player1,player2);

  printf("REAL MADRID FC STARTING XI:\n\n\t#1 |Iker Casillas|\t#2 |Sergio Ramos\t #3 |DANI CARVAJAL|\t #4|RAPHAEL VARANE\t#5|Roberto Carlos|\t#6|TONI KROOS|\t#7|CRISTIANO RONALDO|\n\t#8 |LUKA MODRIC|\t#9 |KARIM BENZEMA|");
  printf("\n\n FC BARCELONA STARTING XI:\n\n\t#1 |TER STEGEN|\t#2 |GERARD PIQUE\t#3 |JORDI ALBA|\t#4|LENGLET|\t#5|SAMUEL UMTITI|\t#6|IVAN RAKITIC|\t#7|SERGIO BUSQUETS|\n\t#8 |SUAREZ|\t#9 |LIONEL MESSI|");
  printf("\n\nplayer %d has the ball\n ",player1);

  time(&start_t);

  do
{

   srand(time(0));

   a = random (-4,4,1);
   b=  random (-6,3,1);

   player3 = random (1,9,1); //challenge


   if( team ==1)
   {
     action1 = random (1,3,1); //1 = tackle ,2= press , 3=push
   //action
     printf("\nENTER 1 TO PASS\n2 TO SHOOT\n3 TO DRIBBLE\n\n");
     scanf("%d",&action);

    if(action ==2)
    {
     printf("\n\npress 1 for power\n2 for lob\n3 for finesse\n\n");
     scanf("%d",&shoot);
    }

    pitch(44,150,a,b,player1,player2);

    gk = random (1,3,1); //if gk = shoot it's a save else goal

    if( action == 1  )
    {
     printf("YOU WANT TO PASS THE BALL TO WHOM?\n");
     scanf("%d",&player2);

     if(action1 ==1 )
      {
       printf("\n Ball from player %d was intercepted . player %d shows great awareness and has the ball now. \n",player1,player3);
       player1 = player3 ;
       team =2 ;
       pitch(44,150,a,b,player1,player2);
      }

      else
      {
         printf("\n%d passed to %d\n",player1,player2);
         player2 = player1;
      }

    }

    else if( action == 2)
    {
     a += random(8,20,1) ;
     b+= random(1,10,1) ;

      if( shoot == gk)
      {
        printf("\nWHAT A STOP !\n");
      }

      else
      {
       printf("~~~~~~~~~~~~IT'S A GOAL~~~~`\n\n ");
       delay(10);
       score1++;
      }

     }

   }

   else if(action ==3 )
   {
     if(action1 != 1  )
     {
      printf("\nWHAT A DRIBBLE by %d\n",player2) ;
      a += random(2,5,1);
      b += random(1,7,1);
     }

     else if (action1 ==1)
       printf("\nTHAT'S A VERY BAD FOUL . WHAT WAS HE THINKING THERE\n ");

     else
       printf("\nHE HAS 3 PLAYERS SURROUNDING HIM AND STILL THERE IS NO STOPPING HIM \n");
   }

  else if(team ==2)
  {
    reaction = random (1,3,1) ;

   printf("\nPRESS 1 TO TACKLE\nPRESS 2 TO PRESS\nPRESS 3 TO MARK PLAYER\n");
   scanf("%d",&reaction1);

    if( reaction ==1 )
    {

       if( reaction1 ==1  )
       {
         printf(" \nBall from player %d was intercepted .\n",player1);
         player1 = player3 ;
         pitch(44,150,a,b,player1,player2);
         team =1 ;
       }

       else
        {
         printf("\n%d passed to %c\n",player1,player2);
         player2 = player1;
        }
    }

    else if( reaction == 2)
    {
     a += random(8,20,1) ;
     b += random(1,10,1) ;

     printf("THERE SEEMS TO BE POSSIBILITY OF A SHOT .\nPRESS 1 TO STAY STILL\nPRESS 2 TO COME FORWARD\nPRESS 3 TO JUMP SIDEWAYS\n");
     scanf("%d",&gk1);

     shoot1 = random (1,3,1) ;

      if( shoot1 == gk1 )
      {
        printf("\nWHAT A STOP !\n");
      }

      else
      {
       printf("~~~~~~~~~~~~IT'S A GOAL~~~~`\n\n ");
       delay(10);
       score2++ ;
       player1=9 ;
       player2=0;
      }

    }

    else if( reaction ==3 )
     {
        if( reaction1 == 2  )
        {
           printf("\nWHAT A DRIBBLE !\n") ;
           a += random(2,5,1);
           b += random(1,7,1);
        }

        else if ( reaction1 ==1)
         printf("\nTHAT'S A VERY BAD FOUL . WHAT WAS HE THINKING THERE\n ");

        else
           printf("\nHE HAS 3 PLAYERS SURROUNDING HIM AND STILL THERE IS NO STOPPING HIM \n");
      }
  }
  time(&end_t);
  diff_t = difftime(end_t, start_t);

  printf("%3.f\' RMC %d - FCB %d ",diff_t , score1 , score2);

  }while(diff_t<600);

}

